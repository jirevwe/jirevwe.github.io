<% if (index) { %>
    <% if (post.link) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url" property="url"><%= post.title %></a>
    <% } else if (post.title) { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>" itemprop="url" property="url"><%= post.title %></a>
    <% } else { %>
        <a class="<%= class_name %>" href="<%- url_for(post.path) %>">Untitled</a>
    <% } %>
<% } else { %>
    <a href="<%- full_url_for(post.path) %>" class="u-url">
        <h1 class="<%= class_name %> p-name" itemprop="name headline" property="headline">
            <%= post.title %>
        </h1>
    </a>
<% } %>

